@model System.Collections.Generic.IEnumerable<WebMVC.Models.ContactDto?>

@{
    ViewData["Title"] = "Contact List";
}

<h2>@ViewData["Title"]</h2>

<form id="contactForm">
    <div class="mb-3">
        <a href="@Url.Action("Create", "Contact")" class="btn btn-success">Add New Contact</a>
    </div>
    <form id="contactSearchForm" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="firstNameSearch" class="form-label">First Name:</label>
                <input type="text" class="form-control" id="firstNameSearch" name="firstNameSearch" placeholder="Search by First Name">
            </div>
            <div class="col-md-4">
                <label for="surnameSearch" class="form-label">Surname:</label>
                <input type="text" class="form-control" id="surnameSearch" name="surnameSearch" placeholder="Search by Surname">
            </div>
            <div class="col-md-4">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="isActiveFilter" name="isActiveFilter" value="true">
                    <label class="form-check-label" for="isActiveFilter">Show Active Only</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th>Contact Name</th>
                <th>Mobile Phone</th>
                <th>Email Address</th>
                <th>Contact Type</th>
                <th>Is Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td><input type="radio" name="selectedContact" value="@contact.Id" /></td>
                    <td>@($"{contact.Firstname} {contact.Surname}")</td>
                    <td>@contact.MobilePhone</td>
                    <td>@contact.EmailAddress</td>
                    <td>@contact.ContactType</td>
                    <td>@(contact.IsActive ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <button type="button" class="btn btn-primary action-btn" data-action="edit">Edit</button>
        <button type="button" class="btn btn-info action-btn" data-action="details">Details</button>
        <button type="button" class="btn btn-danger action-btn" data-action="delete">Delete</button>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $(".action-btn").click(function() {
                var selectedContact = $("input[name='selectedContact']:checked").val();
                var action = $(this).data('action');

                if (selectedContact) {
                    var url = '@Url.Action("Index", "Contact")/' + action + '/' + selectedContact;
                    window.location.href = url;
                } else {
                    alert("Please select a contact.");
                }
            });
        });
    </script>
}