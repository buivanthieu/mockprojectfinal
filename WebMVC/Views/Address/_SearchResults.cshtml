@model DataAccessLayer.Entities.PagedResult<DataAccessLayer.Entities.AddressSearchResult>

@if (Model != null && Model.Items.Any())
{
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th></th>
        <th>Address</th>
        <th>Post code</th>
        <th>Town</th>
        <th>County</th>
        <th>Country</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
    <tr>
        <td><input type="radio" name="selectedAddress" data-address="@item.Address" data-post-code="@item.PostCode" data-town="@item.Town" data-county="@item.County" data-country="@item.CountryName" /></td>
        <td>@item.Address</td>
        <td>@item.PostCode</td>
        <td>@item.Town</td>
        <td>@item.County</td>
        <td>@item.CountryName</td>
    </tr>
    }
    </tbody>
</table>

<div class="text-center">
    @if (Model.TotalPages > 1)
    {
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
        <li class="page-item">
            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageNumber - 1))">Previous</a>
        </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
        </li>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
        <li class="page-item">
            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageNumber + 1))">Next</a>
        </li>
        }
    </ul>
    }
</div>
}
else
{
<p>No results found.</p>
}
