@model DataAccessLayer.Entities.PagedResult<DataAccessLayer.Entities.AddressSearchResult>
@{
ViewData["Title"] = "Search Postcode";
}
<h4>Search Postcode</h4>
<div class="search-form">
    <form id="searchForm" asp-action="Search" method="post">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="postcode">Postcode:</label>
                <input type="text" class="form-control" id="postcode" name="postcode">
            </div>
            <div class="col-md-4 mb-3">
                <label for="street">Street:</label>
                <input type="text" class="form-control" id="street" name="street">
            </div>
            <div class="col-md-4 mb-3">
                <label for="town">Town:</label>
                <input type="text" class="form-control" id="town" name="town">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Search Address</button>
                <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>
                <button type="button" id="noneBtn" class="btn btn-secondary">None</button>
            </div>
        </div>
    </form>
</div>
<div id="searchResults">
    @await Html.PartialAsync("_SearchResults", Model)
</div>
<div class="mt-3">
    <button id="selectBtn" class="btn btn-primary">Select</button>
    <button id="closeBtn" class="btn btn-secondary">Close</button>
</div>

@section Scripts {
<script>
    function loadPage(page) {
        var form = $('#searchForm');
        var data = form.serialize() + '&page=' + page;
        $.ajax({
            url: form.attr('action'),
            type: form.attr('method'),
            data: data,
            success: function (result) {
                $('#searchResults').html(result);
            },
            error: function (xhr, status, error) {
                console.log("Error: " + error);
            }
        });
    }

    $(document).ready(function() {
        $('#searchForm').on('submit', function(e) {
            e.preventDefault();
            $.ajax({
                url: this.action,
                method: this.method,
                data: $(this).serialize(),
                success: function(result) {
                    $('#searchResults').html(result);
                }
            });
        });

        // Clear button (formerly None)
        $('#clearBtn').click(function() {
            $('#searchForm')[0].reset();
            $('#searchResults').empty();
        });

        // None button (formerly Clear)
        $('#noneBtn').click(function() {
            $('#searchForm')[0].reset();
        });

        $('#closeBtn').click(function() {
            window.close();
        });

        $(document).on('click', '#selectBtn', function() {
            var selectedAddress = $('input[name="selectedAddress"]:checked').closest('tr');
            if (selectedAddress.length > 0) {
                var address = selectedAddress.find('td:eq(1)').text();
                var postcode = selectedAddress.find('td:eq(2)').text();
                var town = selectedAddress.find('td:eq(3)').text();
                var county = selectedAddress.find('td:eq(4)').text();
                var country = selectedAddress.find('td:eq(5)').text();

                // Populate the input fields
                $('#postcode').val(postcode);
                $('#street').val(address);
                $('#town').val(town);

                // If you want to pass this data back to the opener window
                if (window.opener && !window.opener.closed) {
                    window.opener.populateAddressFields(address, postcode, town, county, country);
                }

                // Optionally close the window
                // window.close();
            } else {
                alert('Please select an address.');
            }
        });
    });
</script>
}
