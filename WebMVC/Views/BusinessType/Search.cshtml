@model DataAccessLayer.Entities.PagedResult<DataAccessLayer.Entities.BusinessType>
@{
ViewData["Title"] = "Search Business Type";
}

<h4>Search Business Type</h4>
<div class="search-form">
    <form id="searchForm" asp-action="Search" method="post">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="businessName">Business Name:</label>
                <input type="text" class="form-control" id="businessName" name="businessName">
            </div>
            <div class="col-md-6 mb-3">
                <label for="sicCode">SIC Code:</label>
                <input type="text" class="form-control" id="sicCode" name="sicCode">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Search Business</button>

                <button type="button" id="clearBtn" class="btn btn-secondary">Clear</button>

                <button type="button" id="noneBtn" class="btn btn-secondary">None</button>
            </div>
        </div>
    </form>
</div>
<div id="searchResults">
    @await Html.PartialAsync("_BusinessTypeSearchResults", Model)
</div>
<div class="mt-3">
    <button id="selectBtn" class="btn btn-primary">Select</button>
    <button id="closeBtn" class="btn btn-secondary">Close</button>
</div>

@section Scripts {
<script>
    function loadPage(page) {
        var form = $('#searchForm');
        var data = form.serialize() + '&page=' + page;
        $.ajax({
            url: form.attr('action'),
            type: form.attr('method'),
            data: data,
            success: function (result) {
                $('#searchResults').html(result);
            },
            error: function (xhr, status, error) {
                console.log("Error: " + error);
            }
        });
    }

    $(document).ready(function () {
        $('#searchForm').on('submit', function (e) {
            e.preventDefault();
            $.ajax({
                url: this.action,
                method: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    $('#searchResults').html(result);
                },
                error: function (xhr, status, error) {
                    console.log("Error: " + error);
                }
            });
        });

        $('#clearBtn').click(function () {
            $('#searchForm')[0].reset();
            $('#searchResults').empty();
        });

        $('#noneBtn').click(function () {
            $('#searchForm')[0].reset();
        });

        $('#closeBtn').click(function () {
            window.close();
        });

        $(document).on('click', '#selectBtn', function () {
            var selectedBusinessType = $('input[name="selectedBusinessType"]:checked').closest('tr');
            if (selectedBusinessType.length > 0) {
                var businessName = selectedBusinessType.find('td:eq(1)').text();
                var sicCode = selectedBusinessType.find('td:eq(2)').text();

                $('#businessName').val(businessName);
                $('#sicCode').val(sicCode);

                if (window.opener && !window.opener.closed) {
                    window.opener.populateBusinessTypeFields(businessName, sicCode);
                }

                window.close();
            } else {
                alert('Please select a business type.');
            }
        });
    });
</script>
}
