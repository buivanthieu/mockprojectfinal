@model DataAccessLayer.Entities.PagedResult<DataAccessLayer.Entities.BusinessType>

@if (Model != null && Model.Items.Any())
{
<table class="table">
    <thead>
    <tr>
        <th>Select</th>
        <th>Business Name</th>
        <th>SIC Code</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
    <tr>
        <td>
            <input type="radio" name="selectedBusinessType" value="@item.BusinessName" data-sic="@item.SICCode" />
        </td>
        <td>@item.BusinessName</td>
        <td>@item.SICCode</td>
    </tr>
    }
    </tbody>
</table>

<div class="text-center">
    @if (Model.TotalPages > 1)
    {
    <ul class="pagination">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageNumber - 1))">Previous</a>
            </li>
        }
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)" role="button">@i</a>
            </li>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageNumber + 1))">Next</a>
            </li>
        }
    </ul>
    }
</div>
}
else
{
<p>No results found.</p>
}
