@model WebMVC.Models.CreateProgrammeDto

@{
    ViewData["Title"] = "Create Programme";
}

<h2>Create Programme</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactId" class="control-label"></label>
        <select asp-for="ContactId" class="form-control" asp-items="ViewBag.Contacts">
            <option value="">Select Contact</option>
        </select>
        <span asp-validation-for="ContactId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-control" type="checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>