@model Programme

@{
ViewData["Title"] = "Delete Programme";
}

<h2>Delete Programme</h2>

<h4>Programme</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @Model.Name
    </dd>
    <dt class="col-sm-2">
        Description
    </dt>
    <dd class="col-sm-10">
        @Model.Description
    </dd>
    <dt class="col-sm-2">
        Contact
    </dt>
    <dd class="col-sm-10">
        @Model.Contact?.Name @Model.Contact?.Name
    </dd>
    <dt class="col-sm-2">
        Is Active
    </dt>
    <dd class="col-sm-10">
        @Model.IsActive
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </div>
</form>